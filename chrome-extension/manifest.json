{
  "manifest_version": 2,
  "name": "Recommendations blocker",
  "version": "0.1.2",
  "icons": {
    "64": "images/main.png"
  },
  "browser_action": {
    "default_icon": {                    
      "32": "images/facebook.png"
    },
    "default_title": "Recommendations blocker",
    "background": {
      "persistent": false
    }
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/main.js",
      "scripts/facebook_suggestions_remover.js"
    ],
    "persistent": false
  }
}
